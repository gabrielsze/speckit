# Environment Variables - Copy to .env.local for development

# Azure SQL Database
SQL_SERVER=your-sql-server.database.windows.net
SQL_DATABASE=your-database-name
SQL_USER=sqladmin
SQL_PASSWORD=your-secure-password
SQL_ENCRYPT=true

# Azure Blob Storage
BLOB_ACCOUNT=yourstorageaccount
BLOB_CONTAINER=events-images
BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Application
APP_ENV=development
LOG_LEVEL=info

# API Configuration (client-facing)
NEXT_PUBLIC_API_BASE=http://localhost:3000/api
